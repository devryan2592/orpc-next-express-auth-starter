{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": ".",
    "paths": {
      "@workspace/db/*": ["./src/*"]
    },
    "moduleResolution": "node"
  },
  "include": ["."],
  "exclude": ["node_modules", "dist"]
}
