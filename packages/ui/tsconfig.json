{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@workspace/typescript-config/internal.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@workspace/ui/*": ["./src/*"],
      "@workspace/*": ["../../*/src", "../../*/src/index"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
